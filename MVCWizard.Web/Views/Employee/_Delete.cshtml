@model MVCWizard.Web.Models.EmployeeDto

<h3>Are you sure you want to delete the Employee 
    @Model?.FullName ?</h3>
<br />
<hr />
<div>
    <form asp-action="DeleteConfirm">
        <input type="hidden" name="emp_id" value="@Model?.Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> 
    </form>
</div>
